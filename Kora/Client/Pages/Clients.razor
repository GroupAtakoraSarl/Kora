@page "/clients"
@using Kora.Shared.Models
@using Kora.Shared.ModelsDto
@inject IClientService ClientService
@inject ICompteService CompteService

<h3 class="mb-5"><strong>Liste des Clients</strong></h3>

@if (clients is null)
{
    <p>Loading...</p>
}

<table class="table table-striped table-bordered bg-light fs-6">
    <thead>
    <th>Identifiant</th>
    <th>Nom d'Utilisateur</th>
    <th>Téléphone</th>
    </thead>
    <tbody>
    @foreach (var client in clients)
    {
        <tr>
            <td>@client.IdClient</td>
            <td>@client.Username</td>
            <td>@client.Tel</td>
        </tr>
    }
    </tbody>
</table>



@code {

    private List<Client> clients = new List<Client>();
    private List<Compte> comptes = new List<Compte>();
    private int compteCount;

    protected override async Task OnInitializedAsync()
    {
        comptes = await CompteService.GetAllComptes();
        clients = await ClientService.GetAllClient();
    }

}